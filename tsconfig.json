{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "jsx": "react",
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "types": [
            "node",
            "jest"
        ],
        "esModuleInterop": true
    },
    "include": [
        "**/*",
        "**/*.tsx",
    ],
    "exclude": [
        "src/**/*.test.tsx",
        "src/stories/**/*.tsx",
    ]
}
